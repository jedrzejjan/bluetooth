<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jdrzej.bluetooth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <!--Pozwolenie na wysyłanie wiadomości-->
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <!--Pozwolenie na dostęp do listy kontaktów-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--Pozwolenie na dostęp do informacji o numerach-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--Pozwolenie na włączenie Bluetooth-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!--Pozwolenie na wykrywanie innych urządzeń Bluetooth-->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!--Pozwolenie na odczytanie lokalizacji-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
</manifest>